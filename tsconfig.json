{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/npc-cli/*": [
        "./npc-cli/*"
      ]
    },
    "types": [
      "@emotion/react/types/css-prop",
      "webpack-env"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.worker.js",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "npc-cli/types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
